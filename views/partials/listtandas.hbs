<div class="ui centered cards">
  {{#each tandas}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
      <div class="content">
        <a class="header">{{uppercase title}} - {{calcTotal melodies}} mins</a>
       <div class="metadata">
          <span class="date">Created: {{formatDate date}}</span>
        </div>
      </div>  
        
      <div class="extra content">  
        
        <a href="/tanda/{{id}}">
          <i class="icon blue folder open"></i>
        </a>
        <a href="/dashboard/deletetanda/{{id}}">
          <i class="ui blue trash icon delplaylist"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>
  